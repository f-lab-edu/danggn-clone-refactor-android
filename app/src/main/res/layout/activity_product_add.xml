<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232121">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button_textview"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#232121"
                android:src="@drawable/baseline_arrow_back_24"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:tint="@color/white"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/product_make_back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />


            <Button
                android:id="@+id/bt_product_add_complete"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@drawable/background_button"
                android:text="완료"
                android:textColor="#00C3FF"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/white" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center">


            <ImageButton
                android:id="@+id/product_make_image_imagebutton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_button"
                android:scaleType="centerCrop"
                android:src="@drawable/outline_crop_original_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/product_make_image_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="이미지 추가"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/product_make_image_imagebutton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_make_image_imagebutton"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_make_image_recyclerview"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/product_make_image_imagebutton"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <EditText
            android:id="@+id/et_product_add_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/white_line"
            android:hint="글 제목"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:textColor="@color/white"
            android:textColorHint="#8c8c8c"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/bt_product_add_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/white_line"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="카테고리"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_make_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:background="@android:color/transparent"
                android:text="₩"
                android:textColor="#8c8c8c"
                android:textSize="25dp"
                tools:ignore="InvalidId,MissingConstraints" />

            <EditText
                android:id="@+id/et_product_add_price"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:hint="가 격"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="#8c8c8c"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <EditText
            android:id="@+id/et_product_add_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_line"
            android:hint="직거래 가능 지역(ex: 서울시 서초구 서초동 00건물 앞)"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:textColor="@color/white"
            android:textColorHint="#8c8c8c"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/et_product_add_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_line"
                android:hint="게시글 내용을 적어주세요(가품 및 판매금직품목은 게시가 제한될 수 있어요)"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textColorHint="#8c8c8c" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>





