<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_dang_guen_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232121"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="환경설정"
        android:textColor="@color/white"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imv_profile_image_setting"
            android:layout_width="64dp"
            android:layout_height="67dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_profile_name_setting"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:text="닉네임"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/my_dang_guen_image_view"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/bt_profile_name_setting"
            android:layout_width="38dp"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:background="#232121"
            android:text=">"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/my_dang_guen_text_view_nick"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="MissingConstraints" />

    </LinearLayout>



    <Button
        android:id="@+id/my_dang_guen_like_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#232121"
        android:gravity="center"
        android:text="관심 목록"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_dang_guen_image_view"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/my_dang_guen_sell_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#232121"
        android:gravity="center"
        android:text="판매 내역"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/my_dang_guen_like_button"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/my_dang_guen_purchase_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#232121"
        android:gravity="center"
        android:text="구매 내역"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/my_dang_guen_sell_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

</LinearLayout>


