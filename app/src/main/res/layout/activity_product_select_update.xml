<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232121">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button_textview"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#232121"
                android:src="@drawable/baseline_arrow_back_24"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:tint="@color/white"
                tools:ignore="UseAppTint" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />


            <ImageView
                android:id="@+id/iv_home_product_item_dialog"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu"
                android:tint="@color/white"
                android:layout_marginRight="3dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/white" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_make_image_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/product_make_image_imagebutton"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/tv_product_select_update_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/white_line"
            android:hint="글 제목"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/bt_product_add_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/white_line"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="카테고리"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_make_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:background="@android:color/transparent"
                android:text="₩"
                android:textColor="@color/white"
                android:textSize="25dp"
                tools:ignore="InvalidId,MissingConstraints" />

            <TextView
                android:id="@+id/tv_product_select_update_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:hint="가 격"
                android:inputType="number"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_product_select_update_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_line"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:textColor="@color/white"
            android:textColorHint="#8c8c8c"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_product_select_update_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_line"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textColorHint="#8c8c8c" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>





